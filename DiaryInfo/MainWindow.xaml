<Window x:Class="DiaryInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DiaryInfo" Height="250" Width="271"
        ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen" >
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Width="auto" Orientation="Vertical">
            <Label Content="DiaryInfo" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Content="Username"  Grid.Column="0" Margin="5,0,5,0" VerticalContentAlignment="Center"/>
                <TextBox Name="usernameTextBox" HorizontalAlignment="Right" Grid.Row="0"  Grid.Column="1" TextWrapping="Wrap" Text="" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TabIndex="0"/>
                <Label Content="Password" Grid.Row="1" Grid.Column="0" Margin="5,0,5,0" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <PasswordBox Name="passTextBox" Width="120" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TabIndex="1"/>
                <Label Content="Timer (secunds)" Grid.Row="2"  Grid.Column="0" Margin="5,0,5,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox TextWrapping="Wrap" Text="300" Grid.Row="2"  Grid.Column="1" Width="120" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Name="timeoutTextBox" TabIndex="2"/>
        </Grid>
        <StackPanel HorizontalAlignment="Center" Height="auto" Margin="0,0,0,0" VerticalAlignment="Top" Width="271" Orientation="Horizontal">
                <Separator MinWidth="20"/>
                <Button Content="Ok" DockPanel.Dock="Left" Margin ="5" MinWidth="100" HorizontalAlignment="Left" Click="OkButtonClick" TabIndex="3"/>
                <Button Content="Exit" DockPanel.Dock="Right" Margin ="5" MinWidth="100" HorizontalAlignment="Right" Click="ExitButtonClick" TabIndex="4"/>
                <Separator MinWidth="20"/>  
        </StackPanel>
            <Button Content="Set timeout" Click="TimerButtonClick" Margin="5" HorizontalAlignment="Center" TabIndex="5" />
            <Label Content="" Name="AuthorLabel" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

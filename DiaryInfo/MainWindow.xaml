<Window x:Class="DiaryInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DiaryInfo" Height="350" Width="304"
        WindowStartupLocation="CenterScreen" Icon="images/MainIcon.ico">
    <Window.Resources>
        <Style x:Key="MyFontStyle">
            <Setter Property="Control.FontFamily" Value="Calibri"></Setter>
            <Setter Property="Control.FontSize" Value="18"></Setter>
            <Setter Property="Control.FontWeight" Value="Bold"></Setter>
            <Setter Property="Control.Padding" Value="5"></Setter>
            <Setter Property="Control.Margin" Value="5"></Setter>
        </Style>
        <Style x:Key="MyGridPasswordBox" TargetType="{x:Type PasswordBox}">
            <Setter Property="Margin" Value="5,2,5,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="2,5"/>
            <Setter Property="Padding" Value="5,5" />
        </Style>
    </Window.Resources>
    <Grid Style="{StaticResource MyFontStyle}" Height="Auto" Width="273">
        <StackPanel HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="auto" Orientation="Vertical">
            <Label Content="DiaryInfo" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Margin" Value="5,2,5,2"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Margin" Value="5,2,5,2"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Width" Value="120"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                    </Style>
                </Grid.Resources>
                <Label Content="Username" Grid.Row="0" Grid.Column="0"/>
                <TextBox Name="usernameTextBox" Grid.Row="0" Grid.Column="1" Text="" TabIndex="0"/>
                <Label Content="Password" Grid.Row="1" Grid.Column="0"/>
                <PasswordBox Name="passTextBox" Grid.Row="1" Grid.Column="1" TabIndex="1" Style="{DynamicResource MyGridPasswordBox}"/>
                <Label Content="Timer (secunds)" Grid.Row="2" Grid.Column="0"/>
                <TextBox Name="timeoutTextBox" Text="300" Grid.Row="2" Grid.Column="1" TabIndex="2"/>
            </Grid>
            <CheckBox Name="SaveCookiesCheckBox" IsChecked="True" HorizontalAlignment="Right">Save cookies to disk</CheckBox>
            <DockPanel Width="Auto">
                <Button Content="Ok" Click="OkButtonClick" TabIndex="3"/>
                <Button Content="Exit" DockPanel.Dock="Right" HorizontalAlignment="Right" Click="ExitButtonClick" TabIndex="4"/>
            </DockPanel>
            <Button Content="Set timeout" Click="TimerButtonClick" HorizontalAlignment="Center" TabIndex="5"/>
            <Label Content="" Name="AuthorLabel" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
